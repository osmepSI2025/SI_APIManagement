@model SME_WEB_ApiManagement.Models.ViewRegisterApiModels
@{
    ViewData["Title"] = "Register API";

    var vDdlStatus = @ViewBag.vDdlStatus;
    var vDdlOrg = @ViewBag.vDdlOrg;

}
@using (Html.BeginForm("RegisterAPI", "RegisterAPI", FormMethod.Post, htmlAttributes: new { enctype = "multipart/form-data" }))
{
    <div class="wrap-content">
        <div class="header">
            <div class="nav-navigation">
                <p>HOME</p>
                <p>></p>
                <p>Register API</p>
            </div>
            <div class="header_content">
                <h1>Register API</h1>
                <div id="Batch">
                    <div class="content_body">
                        <div class="row">
                            <div class="col-md-3 offset-md-3">
                                <div><label>หน่วยงานที่ขอใช้ :</label></div>

                            </div>
                            <div class="col-md-3">

                                <select asp-for="MRegister.OrganizationCode" asp-items="vDdlOrg" class="form-control">
                                    <option value="">-- กรุณาเลือก --</option>
                                </select>

                            </div>
                            <div class="col-md-3 offset-md-3">
                                <div><label>วันเริ่มต้น :</label></div>

                            </div>
                            <div class="col-md-3">

                                <input class="form-control" type="date" placeholder="Ex.dd/MM/yyyy" asp-for="MRegister.StartDate" />

                            </div>

                            <div class="col-md-3 offset-md-3">
                                <div><label>วันสิ้นสุด : </label></div>

                            </div>
                            <div class="col-md-3">
                                <input class="form-control" type="date" placeholder="Ex.dd/MM/yyyy" asp-for="MRegister.EndDate" />


                            </div>
                            <div class="col-md-3 offset-md-3">
                                <div><label>ระบบที่ใช้ : </label></div>

                            </div>
                            <div class="col-md-3">

                                @for (var i = 0; i < Model.LSystem.Count; i++)
                                {
                                    <div>
                                        <input type="hidden" asp-for="LSystem[i].SystemCode" />
                                        <input type="hidden" asp-for="LSystem[i].SystemName" />

                                        <input type="checkbox" asp-for="LSystem[i].IsSelected" />
                                        <label>@Model.LSystem[i].SystemName</label>
                                    </div>
                                }
                            </div>
                            <div class="col-md-3 offset-md-3">
                                <div><label>หมายเหตุ : </label></div>

                            </div>
                            <div class="col-md-3">
                                <textarea id="w3review" name="w3review" rows="8" cols="100" placeholder="Enter your text here...">

                                </textarea>

                            </div>





                        </div>

                        <br />
                        <div class="text-center m-t-10">

                            <button class="btn btn_search text-color-botton m-r-10" id="saveData" value="saveData" name="saveData">Submit</button>
                            <button class="btn btn_cancel ">Cancel</button>
                        </div>


                    </div>
                </div>
            </div>

        </div>

    </div>

}

