@model SME_WEB_ApiManagement.Models.ViewSystemApiModels
@{
    ViewData["Title"] = "System Master API";
    var vDdlStatus = @ViewBag.vDdlStatus;
    var vDdlOrg = @ViewBag.vDdlOrg;
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
<script>
    function GetCreate() {
      
        $("#CreateModal").modal()
    }

    function OpenConfirmDeleteModal(ReqID) {


        document.getElementById("TArrivalDetaiModels_Id").value = ReqID;

        $("#ConfirmDeleteModal").modal();

    }

</script>
<script>
    $(document).ready(function () {
        $(".editbtn").click(function () {
            var id = $(this).data("id");
            var systemName = $(this).data("systemname");
            var flagActive = $(this).data("flagactive");

            $("#InsMSystem_Id").val(id);
            $("#InsMSystem_SystemName").val(systemName);
            $("#InsMSystem_FlagActive").val(flagActive);

            $("#CreateModal").modal("show");
        });

     
    });
  
</script>



@using (Html.BeginForm("SysMasterAPI", "SysMasterAPI", FormMethod.Post, htmlAttributes: new { enctype = "multipart/form-data" }))
{
    <div class="main-content">
    <div class="wrap-boder">
        <div class="wrap-content">
            <div class="header">
                <div class="nav-navigation">
                        <p class="m-r-10">HOME</p> <p>></p>
                        <p class="m-l-10">API System Master</p>
                </div>
                <div class="header_content">
                    <h1>API System Master</h1>
                </div>
            </div>
            <div class="content_body">
                <div class="row">
                    <div class="col-md-6">
                        <div><label>ชื่อระบบ</label></div>
                  
                        <input class="form-control" type="text" asp-for="MSystem.SystemName" placeholder="Ex. ระบบ..." />
                    </div>



                    <div class="col-md-6">
                        <div><label>สถานะ</label></div>
                   
                        <select asp-for="MSystem.FlagActive" asp-items="vDdlStatus" class="form-control">
                            <option value="">-- กรุณาเลือก --</option>
                        </select>
                    </div>

                    <div class="col-md-6">
                            <div><label>วันที่สร้าง</label></div>
                        <input class="form-control" type="date" asp-for="MSystem.CreateDate" />
                      
                    </div>
                        <div class="col-md-6">
                            <div><label>วันที่สิ้นสุด</label></div>
                            <input class="form-control" type="date" />

                        </div>
                 
                </div>


                <div class="text-center m-t-10">
                    <button class="btn btn_search text-color-botton" name="searchData" id="searchData" value="searchData">Search</button>
                    <button class="btn btn_search text-color-botton" name="clearSearcData" id="clearSearcData" value="clearSearcData">Clear</button>
                    @*                 <button class="btn btn_search text-color-botton" name="exportStage" id="exportStage" value="exportStage"> <span class="icon_button"> <img src="../img/export.png" alt="Description" /> </span> Export Data</button>
                *@
                </div>
                <br />

                <br />
                </div>
            </div>
        </div>
    </div>
                    <div class="main-content">
                        <div class="wrap-boder">
                            <div class="wrap-content">
                <div class="content_table">
                    <div class="content_table_head d-flex align-items-center">
                        <h6>รายการ API System Master</h6>

                    </div>
                    <div class="line"></div>
                    <div class="m-b-10">

                        <input type="button" class="btn btn_search text-color-botton" name="create" onclick="GetCreate();" value="+ADD" />

                    </div>
                    <div class="table-responsive">
                        <table class=" table table-stand">
                            <thead>
                                <tr>


                                    <th scope="col">#</th>


                                    <th scope="col">ระบบให้บริการ</th>
                                 
                                    <th scope="col">สถานะ</th>
                                    <th scope="col">วันที่สร้าง</th>
                                    <th scope="col">วันที่แก้ไขล่าสุด</th>
                                    <th scope="col"> </th>
                                </tr>
                            </thead>
                            <tbody>



                                @if (Model.LSystem != null)
                                {
                                    @foreach (var w in Model.LSystem)
                                    {
                                        <tr>


                                            <td class="align_text">
                                            </td>
                                            <td class="align_text" style="width:auto">


                                                @Html.ActionLink(w.SystemName, "SysMasterAPIConnect", "SysMasterAPI", new { SystemCode = w.SystemCode }, null)
                                            </td>
                                            
                                            <td class="align_text" style="width:auto">
                                                @(w.FlagActive ?? false ? "ใช้งาน" : "ปิดการใช้งาน")
                                            </td>
                                            <td class="align_text" style="width:auto">
                                                @(w.CreateDate.HasValue ? w.CreateDate.Value.ToString("dd/MM/yyyy") : "-")
                                            </td>
                                            <td class="align_text" style="width:auto">
                                                @(w.UpdateDate.HasValue ? w.UpdateDate.Value.ToString("dd/MM/yyyy") : "-")
                                            </td>

                                            <td>
                                                <a type="button"  
                                                        data-id="@w.Id"
                                                        data-systemname="@w.SystemName"
                                                        data-flagactive="@w.FlagActive">
                                                    <i class="fas fa-edit" style="color: #34A5EB; cursor: pointer;"></i>
                                                </a>
                                              @*   <input type="button" class="btn btn_cancel"
                                                       onclick="OpenConfirmDeleteModal()" name="btn_Delete" value="Delete"> *@

                                                <!-- ปุ่มลบ -->
                                           @*      <button class="btn btn-danger btn-sm deletebtn" data-id="@w.Id">
                                                    Delete
                                                </button> *@
                                                <a type="button" style="cursor: pointer;"
                                                       onclick="OpenConfirmDeleteModal(@w.Id)" name="btn_Delete" value="Delete">
                                                    <i class="fas fa-trash m-l-10 btn_delete-icon "></i>
                                                       </a>
                                            </td>


                                        </tr>
                                    }
                                    
                                }
                                else
                                {
                                    <tr id="trNodata" runat="server" visible="false">
                                        <td colspan="12" valign="middle">
                                            <b>No Data</b>
                                        </td>
                                    </tr>
                                
                                }



                            </tbody>
                        </table>
                    </div>


                    <div class="d-flex justify-content-end">
                        <input type="hidden" name="hidcurrentpage" id="hidcurrentpage" value="@Model.PageModel.CurrentPageNumber"></input>
                        <input type="hidden" name="hidtotalpage" id="hidtotalpage" value="@Model.PageModel.TotalPage"></input>
                        <!-- Start pagiantion -->
                        <nav aria-label="Page navigation example ">
                            <ul class="pagination pull-right layout_align m-t-10">

                                <li class="page-item"><input type="submit" class="page-link" name="first" value="<<"></input></li>
                                <li class="page-item"><input type="submit" class="page-link" name="previous" value="<"></input></li>

                                <li class="page-item text_padding_nav"> @Model.PageModel.CurrentPageNumber of @Model.PageModel.TotalPage</li>
                                <li class="page-item"><input type="submit" class="page-link" name="next" value=">"></input></li>
                                <li class="page-item"><input type="submit" class="page-link" name="last" value=">>"></input></li>

                            </ul>
                        </nav>
                    </div>




                </div>

            
            </div>
        </div>
    </div>
    
    <div class="modal fade" id="CreateModal" tabindex="-1" role="dialog" aria-labelledby="ViewCancelModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document" style="min-width: 80%;">
            <div class="modal-content">
                <div class="modal-header  ">
                    <h5 class="modal-title" id="reqDetailModalLabel">System Master Management</h5>

                    <button type="button" class="close button_close" data-dismiss="modal" aria-label="Close">
                        <span class="x-sign" aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="card" style=" margin-top: 1px; ">

                    <input class="form-control" type="text" asp-for="InsMSystem.Id" id="InsMSystem_Id" />

                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label>ชื่อระบบ</label>
                                    <input class="form-control" type="text" asp-for="InsMSystem.SystemName" placeholder="Ex. ระบบ..." id="InsMSystem_SystemName" />

                                </div>
                            </div>

                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label>สถานะ</label>
                                    <select asp-for="InsMSystem.FlagActive" asp-items="vDdlStatus" class="form-control" id="InsMSystem_FlagActive">
                                        <option value="">-- กรุณาเลือก --</option>
                                    </select>

                                </div>
                            </div>
                        </div>

                    </div>

                </div>


                <div class="modal-footer n-border" style="align-self: center;">
                    <button class="btn btn_search text-color-botton m-r-10" value="saveData" id="saveData" name="saveData">Submit</button>
                    <button class="btn btn_cancel ">Cancel</button>

                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="ConfirmDeleteModal" tabindex="-1" role="dialog" aria-labelledby="ViewCancelModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document" style="min-width: 80%;">
            <div class="modal-content">
                <div class="modal-header  ">
                    <h5 class="modal-title" id="reqDetailModalLabel">Confirm Delete</h5>

                    <button type="button" class="close button_close" data-dismiss="modal" aria-label="Close">
                        <span class="x-sign" aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="card" style=" margin-top: 1px; ">
                    <div class="card-body">
                        <div class="form-group">
                            <label for="CLeaveRequestModel_EmpCode">Are you sure you want to Delete this item?</label>
                            <input type="hidden" id="TArrivalDetaiModels_Id" asp-for="MSystem.Id" />

                        </div>
                    </div>
                </div>


                <div class="modal-footer n-border" style="align-self: center;">
                    <button class="btn btn_search text-color-botton m-r-10" name="DeleteData" id="DeleteData" value="DeleteData">Submit</button>
                    <button class="btn btn_cancel ">Cancel</button>
                </div>
            </div>
        </div>
    </div>
}

